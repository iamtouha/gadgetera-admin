{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "receiver": {
      "type": "string",
      "required": true,
      "maxLength": 64
    },
    "phone": {
      "type": "string",
      "required": true,
      "minLength": 10,
      "maxLength": 14
    },
    "total": {
      "type": "decimal"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "email": {
      "type": "string",
      "required": false
    },
    "confirmed": {
      "type": "boolean",
      "default": false,
      "unique": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["received", "confirmed", "shipped", "delivered", "declined"],
      "default": "received"
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "required": true,
      "component": "order.item"
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "order.address"
    },
    "payment": {
      "type": "component",
      "repeatable": false,
      "component": "order.payment",
      "required": true
    },
    "paid": {
      "type": "decimal",
      "min": 0,
      "default": 0,
      "private": false
    }
  }
}
