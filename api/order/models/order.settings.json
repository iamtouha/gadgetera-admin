{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "cart": {
      "type": "component",
      "repeatable": true,
      "component": "cart.item"
    },
    "coupon": {
      "model": "coupon"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "delivered",
        "invalid",
        "cancelled"
      ],
      "required": true,
      "default": "pending"
    },
    "total": {
      "type": "decimal",
      "min": 0,
      "required": false
    },
    "order_id": {
      "type": "string",
      "unique": true
    },
    "cash_on_delivery": {
      "type": "boolean",
      "default": false
    },
    "address": {
      "type": "text",
      "unique": false,
      "required": true
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "cash",
        "bkash",
        "rocket",
        "nagad"
      ],
      "required": true,
      "default": "cash"
    },
    "trx_id": {
      "type": "string",
      "unique": true,
      "required": true
    }
  }
}
