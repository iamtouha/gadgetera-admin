{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "shipping_address": {
      "type": "component",
      "repeatable": false,
      "component": "order.address",
      "required": false
    },
    "cart": {
      "type": "component",
      "repeatable": true,
      "component": "cart.item"
    },
    "coupon": {
      "model": "coupon"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "delivered",
        "invalid",
        "cancelled"
      ],
      "required": true,
      "default": "pending"
    },
    "delivery_charge": {
      "type": "decimal",
      "min": 0,
      "required": false
    },
    "total": {
      "type": "decimal",
      "min": 0,
      "required": false
    },
    "order_id": {
      "type": "string",
      "unique": true
    },
    "payments": {
      "via": "order",
      "collection": "transaction"
    },
    "cart_total": {
      "type": "decimal",
      "required": false,
      "min": 0
    },
    "cash_on_delivery": {
      "type": "boolean",
      "default": false
    }
  }
}
