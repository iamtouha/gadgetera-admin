{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "receiver": {
      "type": "string",
      "required": true,
      "maxLength": 64
    },
    "address": {
      "type": "text",
      "required": true,
      "maxLength": 255,
      "private": true
    },
    "phone": {
      "type": "string",
      "required": true,
      "minLength": 10,
      "maxLength": 14
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "bkash",
        "rocket",
        "nagad"
      ]
    },
    "price": {
      "type": "decimal",
      "required": true,
      "private": false
    },
    "transactionid": {
      "type": "string",
      "private": true,
      "required": true,
      "unique": true,
      "minLength": 15,
      "maxLength": 64
    },
    "paymentid": {
      "type": "string",
      "required": true
    },
    "products": {
      "collection": "product"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "email": {
      "type": "string",
      "required": false
    },
    "confirmed": {
      "type": "boolean",
      "default": false,
      "unique": false
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "received",
        "confirmed",
        "shipped",
        "delivered",
        "declined"
      ],
      "default": "received"
    }
  }
}
