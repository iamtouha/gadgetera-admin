{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal"
    },
    "stock": {
      "type": "integer",
      "min": 0,
      "max": 9999
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "discount": {
      "type": "decimal",
      "max": 100,
      "min": 0,
      "default": 0
    },
    "photos": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "variants": {
      "type": "component",
      "repeatable": true,
      "component": "product.variant"
    },
    "brand": {
      "via": "products",
      "model": "brand"
    },
    "category": {
      "via": "products",
      "model": "category"
    }
  }
}
