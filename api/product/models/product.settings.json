{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 10
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "SKU": {
      "type": "string",
      "private": false,
      "required": true,
      "unique": true,
      "minLength": 4
    },
    "photos": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "brand": {
      "model": "brand"
    },
    "category": {
      "model": "category"
    },
    "variants": {
      "type": "component",
      "repeatable": true,
      "component": "product.variant"
    }
  }
}
